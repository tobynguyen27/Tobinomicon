{
    "editor.defaultFormatter": "oxc.oxc-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.oxc": "always"
    },

    "oxc.configPath": ".oxfmtrc.json",

    "files.associations": {
        "*.css": "tailwindcss"
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "cSpell.words": [
        "astralgenerators",
        "Bebe",
        "Modrinth",
        "Multiblock",
        "Multiblocks",
        "Resolith",
        "Tobinomicon",
        "Wallsharing"
    ]
}
